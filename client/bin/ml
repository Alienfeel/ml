#!/bin/bash

BASEDIR=$(dirname $0)
TARGET=$BASEDIR/../target
MAINJAR=$TARGET/ml-client-0.1.0.jar
LJ=$TARGET/lib/*.jar

export LIBJARS=$(echo ${LJ} | tr " " ",")
export HADOOP_CLASSPATH=`echo ${LIBJARS} | sed s/,/:/g`

$HADOOP_HOME/bin/hadoop jar $MAINJAR com.cloudera.science.ml.client.Main -libjars ${LIBJARS} $@
